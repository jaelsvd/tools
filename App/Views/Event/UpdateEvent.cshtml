@model App.ViewModels.EventViewModel

@{
    ViewBag.Title = "UpdateEvent";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- Main section-->
<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">
            Editar Evento
        </div>

        <div class="row">
            <!-- Article Content-->
            <div class="col-lg-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("EditEvent", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.EventToUpdate.Title, new { htmlAttributes = new { @class = "mb-lg form-control input-lg", placeholder = "Favor de insertar título del evento..." } })
                                        @Html.ValidationMessageFor(model => model.EventToUpdate.Title, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(model => model.EventToUpdate.Id, htmlAttributes: new { type = "hidden" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextAreaFor(model => model.EventToUpdate.Body, htmlAttributes: new { @class = "form-control jqte-test" })
                                        @Html.ValidationMessageFor(model => model.EventToUpdate.Body, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.EventToUpdate.EventDate, htmlAttributes : new { @class = "form-control", Type = "date"} )
                                        @Html.ValidationMessageFor(model => model.EventToUpdate.EventDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.EventToUpdate.CategoryId, Model.CategoriesDropDown, new { htmlAttributes = new { @class = "mb-lg form-control input-lg" } })
                                        @Html.ValidationMessageFor(model => model.EventToUpdate.CategoryId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-8" file-div>
                                        <img id="preview" src="@Html.Raw(Model.EventToUpdate.ImagePath)@Html.Raw(Model.EventToUpdate.ImageName)" />
                                        @Html.TextBoxFor(model => model.ImageUpload, htmlAttributes: new { @class = "form-control file-input", type = "file", onchange = "fileSelected();", name = "image_file", id = "image_file" })
                                        @Html.TextBoxFor(model => model.EventToUpdate.ImagePath, htmlAttributes: new { type = "hidden" })
                                        @Html.TextBoxFor(model => model.EventToUpdate.ImageName, htmlAttributes: new { type = "hidden" })
                                    </div>
                                </div>

                                <div class="form-group">

                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-9 col-md-9">
                                        @Html.ActionLink("Cancelar", "ListEvents")
                                        <input type="submit" value="Guardar Cambios" class="btn btn-info" />
                                    </div>
                                </div>
                            </div>
                        }  
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Regresar a la lista", "ListEvents")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
