    @Scripts.Render("~/vendor/jquery-localize-i18n/dist/jquery.localize.js")
    <!-- =============== APP SCRIPTS ===============-->
    @*<script>
        $('.chose-select').chosen();
        $('.wysiwyg').wysiwyg();
    </script>*@

    @Scripts.Render("~/vendor/chosen_v1.2.0/chosen.jquery.min.js")

    <!-- Site.js-->
    @Scripts.Render("~/Scripts/Site.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery-1.12.0.min.js")
