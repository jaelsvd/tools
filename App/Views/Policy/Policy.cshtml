@using PagedList.Mvc;
@using PagedList;
@model PagedList<App.Entities.Policy>
@{
    ViewBag.Title = "Policy";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="unwrap">
            <div style="background-image: url('http://www.fotosyfondos.com/wp-content/uploads/2012/10/Paisajes-Impresionantes.jpg')" class="bg-cover">
                <div class="p-xl text-center text-white">
                    <h2 class="m0">Normas y Procesos</h2>
                </div>
            </div>
        </div>
                
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <hr />
                @foreach (var item in Model)
            {  <div class="col-sm-4 col-md-4">
                    <!-- START widget-->
                    <div class="panel">
                     
                            <div class="item" style="height:300px;">
                                <a href="@Url.Action("PolicyDetail","Policy",new {id = item.Id})"> <img src="@Html.Raw(item.ImagePath)@Html.Raw(item.ImageName)" class="img-responsive center-block" /></a>
                            </div>
                            <div class="panel-body">
                                <div class="caption text-center">
                                    <a href="@Url.Action("PolicyDetail","Policy",new {id = item.Id})">
                                        <h3>@item.Title</h3>
                                    </a>
                                </div>
                            </div>
                    </div>
                    <!-- END widget-->
                </div>
                }
                </div>
            <div class="col-sm-10">
                <div class="center-block">
                    @Html.PagedListPager(Model, page => Url.Action("Policy", new { page, pageSize = Model.PageSize }))
                    Mostrando @Model.FirstItemOnPage a @Model.LastItemOnPage de @Model.TotalItemCount Normas y Politicas
                </div>
            </div>
            </div>
    </div>
  </section>