@model App.ViewModels.PolicyViewModel

@{
    ViewBag.Title = "Modificar Política";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!-- Main section-->
<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">
            Modificar Politica
        </div>
        <div class="row">
            <!-- Article Content-->
            <div class="col-lg-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("EditPolicy", "Policy", FormMethod.Post, new { @class = "from-horizontal", role = "from", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.PolicyToUpdate.Title, new { htmlAttributes = new { @class = "mb-lg form-control input-lg", type = "text", name = "article-title", placeholder = "Favor de insertar título..." } })
                                        @Html.ValidationMessageFor(model => model.PolicyToUpdate.Title, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(model => model.PolicyToUpdate.Id, htmlAttributes: new { type = "hidden" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextAreaFor(model => model.PolicyToUpdate.Body, htmlAttributes: new { @class = "form-control jqte-test" })
                                        @Html.ValidationMessageFor(model => model.PolicyToUpdate.Body, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-8" file-div>
                                        <img id="preview" src="@Html.Raw(Model.PolicyToUpdate.ImagePath)@Html.Raw(Model.PolicyToUpdate.ImageName)" />
                                        @Html.TextBoxFor(model => model.ImageUpload, htmlAttributes: new { @class = "form-control file-input", type = "file", onchange = "fileSelected();", name = "image_file", id = "image_file" })
                                        @Html.TextBoxFor(model => model.PolicyToUpdate.ImagePath, htmlAttributes: new { type = "hidden" })
                                        @Html.TextBoxFor(model => model.PolicyToUpdate.ImageName, htmlAttributes: new { type = "hidden" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-9 col-md-10">
                                        @Html.ActionLink("Cancelar", "ListPolicy")
                                        <input type="submit" value="Guardar Cambios" class="btn btn-info" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Volver a la Lista", "ListPolicy")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>