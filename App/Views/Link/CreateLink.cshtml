@model App.ViewModels.LinkViewModel

@{
    ViewBag.Title = "Crear Link";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!-- Main section-->
<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">
            Links
        </div>
        <div class="row">
            <!-- Article Content-->
            <div class="col-lg-7">
                <div class="panel panel-default">
                    <div class="panel-body">

                        @using (Html.BeginForm("CreateLink", "Link", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "mb-lg form-control input-lg", type = "text", name = "article-title", placeholder = "Favor de insertar Nombre..." })
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "mb-lg form-control input-lg", type = "text", name = "article-title", placeholder = "Favor de insertar una Descripción..." })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(model => model.AccessLink, htmlAttributes: new { @class = "mb-lg form-control input-lg", type = "url", name = "article-title", placeholder = "Favor de insertar URL..." })
                                        @Html.ValidationMessageFor(model => model.AccessLink)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.IsFrequent, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-12">
                                            @Html.CheckBoxFor(model => model.IsFrequent, htmlAttributes: new { type = "checkbox" })
                                            @Html.ValidationMessageFor(model => model.IsFrequent, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-8" file-div>
                                        <img id="preview" src="~/Images/image.png" />
                                        @Html.TextBoxFor(model => model.ImageUpload, htmlAttributes: new { @class = "form-control file-input", type = "file", onchange = "fileSelected();", name = "image_file", id = "image_file" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-9 col-md-10">
                                        @Html.ActionLink("Cancelar", "CreateLink")
                                        <input type="submit" value="Crear" class="btn btn-info" />                                        
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                        <div class="panel-footer">
                            @Html.ActionLink("Volver a la Lista", "ListLinks")
                        </div>

                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
                    </div>
                </div>
            </div>
        </div>
</section>
